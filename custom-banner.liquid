{% schema %}
{
    "name": "Custom Banner",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading Text",
            "default": "Your banner heading"

        },
        {
            "type": "textarea",
            "id": "subheading",
            "label": "Subheading Text",
            "default": "your subheading goes here"

            
        },
        {
            "type": "text",
            "id": "button_label",
            "label": "Button Label",
            "default": "Shop Now"
        },
        {
            "type: "url",
            "id": "button_link",
            "label": "Button Link"
        }
    ]
}
{% endschema %}
<section class="custom-banner">
  <div class="banner-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ setion.settings.button_link }}" class="banner-btn">
      {{ section.settings.button_label }}
    </a>
  </div>
</section>

<style>
.custom-banner {
    padding: 80px 20px;
    text-align: center;
    background: #f5f5f5;

}
.custom-banner h1 {
    font-size: 48px;
    margin-bottom: 15px;

}
.banner-btn {
    display: inline-block;
    padding: 12px 30px;
    background: #000;
    color: #fff;
    border-radius: 6px;
    transition: all 0.3s ease-in-out;
}
.banner-btn:hover {
    background: #e63946; /* animation effect*/
    transform: scale(1.05);

}
</style>

